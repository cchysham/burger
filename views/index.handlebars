<h1>BURGERS!</h1>

<h2>Burgers that have not been eaten</h2>

<div class="noteaten">
  <ol>
    {{#each burgers}} {{#unless devoured}}
    <div class="burgdiv">
      <li>
        <h3>{{burger_name}}</h3>
        <button class="change-devoured" data-id="{{id}}">
          {{#unless devoured}}EAT ME!{{/unless}}
        </button>
      </li>
    </div>
    {{/unless}} {{/each}}
  </ol>
</div>


<h2>Burgers that have been eaten!</h2>
<div class="eaten">
  <ol>
    {{#each burgers}} {{#if devoured}}
    <li>
      <h3>{{burger_name}}</h3>
    </li>
    {{/if}} {{/each}}
  </ol>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>